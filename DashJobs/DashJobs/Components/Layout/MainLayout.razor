@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<head>
     <script src="~/js/alertHelper.js"></script>
    <script src="~/js/localStorageHelper.js"></script>
</head>
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    public bool ShowNavMenu { get; set; } = true;

    protected override void OnParametersSet()
    {
        // Verifica a URL atual para decidir se o menu deve ser exibido
        var currentUri = NavigationManager.Uri;
        ShowNavMenu = !currentUri.Contains("login", StringComparison.OrdinalIgnoreCase);
    }
}